<h1>Jogos Cadastrados</h1>

<a href="/usuarios/novo">Cadastrar novo jogo</a>

<table border="1">
  <tr>
    <th>Id</th>
    <th>Nickname</th>
    <th>Nome</th>
  </tr>
  {{#each jogos}}
    <tr>
      <td>{{this.id}}</td>
      <td>{{this.nickname}}</td>
      <td>{{this.nome}}</td>
      <td>
        <a href="/usuarios/{{this.id}}/update">Atualizar</a>
        <form action="/usuarios/{{this.id}}/delete" method="post">
          <input type="submit" value="Excluir" />
        </form>
        <a href="/usuarios/{{this.id}}/jogos">Ver jogos</a>
      </td>
    </tr>
  {{/each}}
</table>